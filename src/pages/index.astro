---
import Layout from "../layouts/Layout.astro";
import { Button } from "@/components/ui/button";
import ContextMenuBlock from "@/components/ContextMenu";
import DrawerBox from "@/components/DrawerBox";
import { socials } from "@/components/Contacts";
import "@/styles/global.css";
---

<Layout>
  <div>
    <ContextMenuBlock client:load>
      <div></div>
      <div class="flex justify-center">
        <div
          class="flex flex-col gap-2 w-fit justify-center self-center p-1 m-2"
        >
          {
            socials.map((social) => (
              <DrawerBox
                social={social}
                triggerLabel={`${social.name}`}
                submitLabel="Open Link"
                cancelLabel="Close"
                client:load
              />
            ))
          }
        </div>
      </div>
    </ContextMenuBlock>
  </div>
</Layout>
