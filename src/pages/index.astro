---
import Layout from "../layouts/Layout.astro";
import { Button } from "@/components/ui/button";
import ContextMenuBlock from "@/components/ContextMenu";
import DrawerBox from "@/components/DrawerBox";
import { socials } from "@/components/Contacts";
import "@/styles/global.css";
---

<Layout>
  <div
    class="relative w-full sm:w-[70%] md:w-[60%] lg:w-[50%] xl:w-[40%] self-center mx-auto rounded-4xl box-border overflow-hidden"
  >
    <ContextMenuBlock client:load>
      <img
        src="src/assets/bg.jpg"
        class="absolute top-0 left-0 h-1/3 lg:h-5/12 object-cover z-0 w-full"
        alt="bg-pic"
      />

      <div
        class="relative z-10 bg-slate-950/90 rounded-4xl mt-[55%] sm:mt-[40%] xl:mt-[35%] h-full"
      >
        <div class="flex justify-center pb-20 md:pb-10 lg:pb-5">
          <img
            src="src/assets/me-head-circle.png"
            alt=""
            class="absolute max-w-48 md:max-w-52 lg:max-w-60 h-fit -mt-24 xl:-mt-32"
          />
        </div>
        <div class="flex justify-center">
          <div
            class="flex flex-col gap-3 lg:gap-4 lg:w-[17vw] justify-center self-center mt-10 md:mt-28 lg:mt-40 xl:mt-32"
          >
            {
              socials.map((social) => (
                <DrawerBox
                  social={social}
                  triggerLabel={`${social.name}`}
                  submitLabel="Open Link"
                  cancelLabel="Close"
                  client:load
                />
              ))
            }
          </div>
        </div>
      </div>
    </ContextMenuBlock>
  </div>
</Layout>
